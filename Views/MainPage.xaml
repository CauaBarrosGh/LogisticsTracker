<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LogisticsTracker.ViewModels"
             x:DataType="vm:MainViewModel"
             x:Class="LogisticsTracker.Views.MainPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15"
                             VerticalOptions="Center">

            <Label Text="Rastreamento Logístico"
                   SemanticProperties.HeadingLevel="Level1"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <Label Text="Insira seu código de rastreamento abaixo:"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Ex: BR12345"
                   Text="{Binding TrackingId}"
                   ClearButtonVisibility="WhileEditing"
                   HorizontalOptions="Fill" />

            <Button Text="Rastrear Pacote"
                    Command="{Binding TrackPackageCommand}"
                    IsEnabled="{Binding IsNotLoading}"
                    HorizontalOptions="Fill" />

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                               IsVisible="{Binding IsLoading}"
                               HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>